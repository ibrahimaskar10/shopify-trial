{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-banner-{{ section.id }} {
    position: relative;
    height: {{ section.settings.banner_height }}px;
    overflow: hidden;
  }

  .hero-banner-{{ section.id }} .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner-{{ section.id }} .hero-banner__media img,
  .hero-banner-{{ section.id }} .hero-banner__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner-{{ section.id }} .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .hero-banner-{{ section.id }} .hero-banner__content {
    position: relative;
    z-index: 3;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.content_alignment }};
    padding: 0 2rem;
  }

  .hero-banner-{{ section.id }} .hero-banner__content-wrapper {
    max-width: 600px;
    text-align: {{ section.settings.content_alignment }};
  }

  .hero-banner-{{ section.id }} .hero-banner__text {
    color: {{ section.settings.text_color }};
  }

  .hero-banner-{{ section.id }} .hero-banner__title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
    {% if section.settings.text_drop_shadow %}
      {% if section.settings.text_color == '#ffffff' %}
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
      {% else %}
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.7);
      {% endif %}
    {% endif %}
  }

  .hero-banner-{{ section.id }} .hero-banner__subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    line-height: 1.4;
    color: {{ section.settings.text_color }};
    {% if section.settings.text_drop_shadow %}
      {% if section.settings.text_color == '#ffffff' %}
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
      {% else %}
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.7);
      {% endif %}
    {% endif %}
  }

  .hero-banner-{{ section.id }} .hero-banner__cta-container {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: {{ section.settings.content_alignment }};
  }

  .hero-banner-{{ section.id }} .hero-banner__cta {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border: 2px solid {{ section.settings.cta_border_color }};
    color: {{ section.settings.cta_text_color }};
    background-color: transparent;
    transition: all 0.3s ease;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-banner-{{ section.id }} .hero-banner__cta:hover {
    background-color: {{ section.settings.cta_border_color }};
    {% if section.settings.cta_border_color == '#000000' %}
      color: #ffffff;
    {% else %}
      color: #000000;
    {% endif %}
  }

  .hero-banner-{{ section.id }} .hero-banner__background-box {
    background-color: {{ section.settings.box_color }};
    opacity: {{ section.settings.box_opacity | divided_by: 100.0 }};
    padding: 2rem;
    border-radius: 8px;
    max-width: 500px;
  }

  @media screen and (max-width: 749px) {
    .hero-banner-{{ section.id }} .hero-banner__title {
      font-size: 2rem;
    }
    
    .hero-banner-{{ section.id }} .hero-banner__subtitle {
      font-size: 1rem;
    }
    
    .hero-banner-{{ section.id }} .hero-banner__cta-container {
      flex-direction: column;
      align-items: {{ section.settings.content_alignment }};
    }
  }
{%- endstyle -%}

<div class="hero-banner hero-banner-{{ section.id }} section-{{ section.id }}-padding">
  {%- comment -%} Media (Image or Video) {%- endcomment -%}
  <div class="hero-banner__media">
    {%- if section.settings.video_url != blank -%}
      {%- if section.settings.video_url contains 'youtube.com' or section.settings.video_url contains 'youtu.be' -%}
        {%- assign video_id = section.settings.video_url | split: 'v=' | last | split: '&' | first -%}
        <iframe 
          src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1&mute=1&loop=1&playlist={{ video_id }}&controls=0&showinfo=0&rel=0&modestbranding=1&playsinline=1"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      {%- elsif section.settings.video_url contains 'vimeo.com' -%}
        {%- assign video_id = section.settings.video_url | split: '/' | last -%}
        <iframe 
          src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1&muted=1&loop=1&controls=0&background=1"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen>
        </iframe>
      {%- else -%}
        <video autoplay muted loop playsinline>
          <source src="{{ section.settings.video_url }}" type="video/mp4">
        </video>
      {%- endif -%}
    {%- else -%}
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: section.settings.image.alt }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    {%- endif -%}
  </div>

  {%- comment -%} Overlay {%- endcomment -%}
  {%- if section.settings.show_overlay and section.settings.overlay_opacity > 0 -%}
    <div class="hero-banner__overlay"></div>
  {%- endif -%}

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-banner__content">
    <div class="hero-banner__content-wrapper">
      {%- if section.settings.show_background_box -%}
        <div class="hero-banner__background-box">
      {%- endif -%}

      {%- comment -%} Text Blocks {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            <div class="hero-banner__text" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h2 class="hero-banner__title">{{ block.settings.heading }}</h2>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="hero-banner__subtitle">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} CTAs {%- endcomment -%}
      {%- if section.settings.cta_1_text != blank or section.settings.cta_2_text != blank -%}
        <div class="hero-banner__cta-container">
          {%- if section.settings.cta_1_text != blank -%}
            <a href="{{ section.settings.cta_1_link }}" class="hero-banner__cta">
              {{ section.settings.cta_1_text }}
            </a>
          {%- endif -%}
          {%- if section.settings.cta_2_text != blank -%}
            <a href="{{ section.settings.cta_2_link }}" class="hero-banner__cta">
              {{ section.settings.cta_2_text }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_background_box -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Banner Height",
      "default": 600
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content Alignment"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (YouTube, Vimeo, or direct MP4)",
      "info": "Leave blank to use image instead"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Dark Overlay",
      "default": false
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Text Styling"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "text_drop_shadow",
      "label": "Add Drop Shadow to Text",
      "default": false
    },
    {
      "type": "header",
      "content": "Background Box"
    },
    {
      "type": "checkbox",
      "id": "show_background_box",
      "label": "Show Background Box",
      "default": false
    },
    {
      "type": "color",
      "id": "box_color",
      "label": "Box Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "box_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Box Opacity",
      "default": 80
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_1_text",
      "label": "CTA 1 Text"
    },
    {
      "type": "url",
      "id": "cta_1_link",
      "label": "CTA 1 Link"
    },
    {
      "type": "text",
      "id": "cta_2_text",
      "label": "CTA 2 Text"
    },
    {
      "type": "url",
      "id": "cta_2_link",
      "label": "CTA 2 Link"
    },
    {
      "type": "color",
      "id": "cta_border_color",
      "label": "CTA Border Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "cta_text_color",
      "label": "CTA Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Hero Banner Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
